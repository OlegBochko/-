uint8_t trig = 10;

uint8_t echo = 11;

uint8_t en1 = 9;

uint8_t en2 = 3;

uint8_t in1 = 7;

uint8_t in2 = 6;

uint8_t in3 = 5;

uint8_t in4 = 4;

double r;

double z;

boolean isMovingForward = false;
boolean isMovingBack = false;

void setup() {

pinMode (3,OUTPUT);

pinMode (4,OUTPUT);

pinMode (5,OUTPUT);

pinMode (6,OUTPUT);

pinMode (7,OUTPUT);

pinMode (9,OUTPUT);

pinMode (10,OUTPUT);

pinMode (11,INPUT);

}

void loop() {

	r = range (trig, echo); // r>40 +

	delay (50);

	if ( !isMovingForward && !isMovingBack && d>40 )
	{
		speedUp(fromCurrentSpeed, toPlusMaxSpeed); // или speedUp(from, to, step) -- чтобы вручную прописать шаг ускорения
		isMovingForward = true;
		isMovingBack = false; 
	}
	else if ( d<=40 && (isMovingForward && !isMovingBack || !isMovingForward && !isMovingBack) )
	{
		speedUp(fromCurrentSpeed, to MinusMaxSpeed);
		isMovingForward = false;
		isMovingBack = true;
	}
	else if ( !isMovingForward && isMovingBack && d>40 )
	{
		speedUp(fromCurrentSpeed, toPlusMaxSpeed); 
		isMovingForward = true;
		isMovingBack = false;
	}

}

double range (uint8_t trigPin, uint8_t echoPin) {

digitalWrite(trigPin, LOW);

delayMicroseconds(10);

digitalWrite(trigPin, HIGH);

delayMicroseconds(10);

digitalWrite(trigPin, LOW);

z = pulseIn(echoPin, HIGH);

z = (z/2)/29.1;

return z;

}

void Move (uint8_t power, uint8_t enPin, uint8_t posPin, uint8_t negPin) {

digitalWrite (posPin, HIGH);

digitalWrite (negPin, LOW);

analogWrite (enPin, power);

}

